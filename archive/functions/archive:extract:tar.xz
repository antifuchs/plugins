(( $+commands[tar] )) || {
  warn 'extract: you have to install tar'
  return 1
}

if tar --xz --help &>/dev/null;
  tar --xz -xvf "$1"
elif (( $+commands[xz] )); then
  xz -d -c "$1" | tar xvf -
elif (( $+commands[unxz] )); then
  unxz -c "$1" | tar xvf -
elif (( $+commands[xzcat] )); then
  xzcat "$1" | tar xvf -
else
  warn 'extract: you have to install an xz-compatible version of tar or xz'
  return 1
fi

